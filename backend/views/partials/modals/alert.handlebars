<div class="modal d-none" tabindex="-1" role="dialog" id="alert">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="alert-title">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="alert-close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p id="alert-content">Modal body text goes here.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="alert-confirm">Confirm</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="alert-cancel">Cancel</button>
            </div>
        </div>
    </div>
</div>